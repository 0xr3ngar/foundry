{
    "name": "foundry",
    "description": "A template repository for TypeScript projects using Bun runtime",
    "version": "1.0.0",
    "author": "0xr3ngar",
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@types/bun": "^1.2.23",
        "@types/node": "^24.7.0",
        "knip": "^5.64.2",
        "syncpack": "^14.0.0-alpha.23",
        "typescript": "^5.9.3"
    },
    "devEngines": {
        "runtime": {
            "name": "bun",
            "onFail": "error"
        },
        "packageManager": {
            "name": "bun",
            "onFail": "error"
        }
    },
    "keywords": [
        "bun",
        "template",
        "typescript"
    ],
    "license": "MIT",
    "main": "dist/cli.js",
    "module": "dist/cli.js",
    "scripts": {
        "biome:check": "biome check --write ./src/",
        "biome:format": "biome format --write ./src/",
        "biome:lint": "biome lint --write ./src/",
        "build": "bun build src/cli.ts --outdir dist --target bun",
        "check": "bun run typecheck && bun run biome:check && bun run knip",
        "deps:check": "syncpack update --check",
        "deps:format": "syncpack format",
        "deps:update": "syncpack update && bun install",
        "dev": "bun run --watch src/cli.ts",
        "knip": "knip",
        "start": "bun run src/cli.ts",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "typecheck": "tsc --noEmit"
    },
    "type": "module",
    "bin": {
        "foundry": "./dist/cli.js"
    },
    "dependencies": {
        "@inquirer/prompts": "^8.0.2",
        "commander": "^14.0.2"
    }
}
